{
  "info": {
    "name": "Envoyou User Endpoints",
    "description": "Complete user endpoint testing for Envoyou SEC API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "supabaseToken",
      "value": "{{jwt_token}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth - Supabase Verify",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"supabase_token\": \"{{supabaseToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/supabase/verify",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "supabase", "verify"]
        }
      }
    },
    {
      "name": "User - Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/user/profile",
          "host": ["{{baseUrl}}"],
          "path": ["user", "profile"]
        }
      }
    },
    {
      "name": "User - Update Profile",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"company\": \"Test Company\",\n  \"job_title\": \"Developer\",\n  \"timezone\": \"UTC\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/user/profile",
          "host": ["{{baseUrl}}"],
          "path": ["user", "profile"]
        }
      }
    },
    {
      "name": "User - Get Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/user/stats",
          "host": ["{{baseUrl}}"],
          "path": ["user", "stats"]
        }
      }
    },
    {
      "name": "User - Get API Keys",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/user/api-keys",
          "host": ["{{baseUrl}}"],
          "path": ["user", "api-keys"]
        }
      }
    },
    {
      "name": "User - Create API Key",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{supabaseToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test API Key\",\n  \"permissions\": [\"read\", \"write\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/user/api-keys",
          "host": ["{{baseUrl}}"],
          "path": ["user", "api-keys"]
        }
      }
    },
    {
      "name": "User - Get API Token Info",
      "request": {
